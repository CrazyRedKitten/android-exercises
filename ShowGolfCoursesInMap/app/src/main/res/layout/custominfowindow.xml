<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:text="@string/GolfCourseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/golfCourseNameTextView" android:textStyle="bold"
            android:textAlignment="center" android:textSize="18sp"/>
    <TextView
            android:text="@string/Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/infoTextView" android:textAlignment="center"/>
</LinearLayout>